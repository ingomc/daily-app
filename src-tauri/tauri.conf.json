{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Daily App",
  "version": "0.5.0",
  "identifier": "com.andre.daily.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Daily Notes",
        "width": 320,
        "height": 420,
        "minWidth": 280,
        "minHeight": 200,
        "maxWidth": 600,
        "maxHeight": 800,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": true,
        "shadow": true,
        "center": false,
        "titleBarStyle": "Overlay"
      },
      {
        "label": "quick-capture",
        "title": "Quick Capture",
        "width": 680,
        "height": 440,
        "minWidth": 680,
        "minHeight": 340,
        "maxWidth": 800,
        "maxHeight": 600,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "shadow": false,
        "center": true,
        "url": "quick-capture.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
